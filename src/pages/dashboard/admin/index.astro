---
import DashboardLayout from "../../../layouts/DashboardLayout.astro";
import { supabase } from "../../../lib/supabase";
import {
    Users,
    Building2,
    FileText,
    TrendingUp,
    Calendar,
    Clock,
} from "lucide-react";

// Security Check
const { user } = Astro.locals;
if (!user) return Astro.redirect("/auth/login");
const { data: profile } = await supabase
    .from("profiles")
    .select("role")
    .eq("id", user.id)
    .single();
if ((profile as any)?.role?.toLowerCase() !== "admin")
    return Astro.redirect("/dashboard");

// Fetch Stats
const { count: usersCount } = await supabase
    .from("profiles")
    .select("*", { count: "exact", head: true });
const { count: studiosCount } = await supabase
    .from("studios")
    .select("*", { count: "exact", head: true });
const { count: dossiersCount } = await supabase
    .from("dossiers")
    .select("*", { count: "exact", head: true });
const { count: bookingsCount } = await supabase
    .from("bookings")
    .select("*", { count: "exact", head: true });

// Calculate Revenue (Sum of deposit_amount for non-cancelled bookings)
const { data: revenueData } = await supabase
    .from("bookings")
    .select("deposit_amount")
    .neq("status", "cancelled");

const totalRevenueValue =
    (revenueData as any[])?.reduce(
        (acc, curr) => acc + (curr.deposit_amount || 0),
        0,
    ) || 0;
// Assuming deposit_amount is in cents
const totalRevenue = new Intl.NumberFormat("en-US", {
    style: "currency",
    currency: "USD",
}).format(totalRevenueValue / 100);

// Fetch Recent Users
const { data: recentUsers } = await supabase
    .from("profiles")
    .select("full_name, email, created_at, role, avatar_url")
    .order("created_at", { ascending: false })
    .limit(5);

// Fetch Recent Bookings (Activity)
const { data: recentBookings } = await supabase
    .from("bookings")
    .select(
        "created_at, status, dossier:dossier_id(title), client:client_id(full_name)",
    )
    .order("created_at", { ascending: false })
    .limit(5);

const statCards = [
    {
        title: "Total Users",
        value: usersCount || 0,
        icon: Users,
        color: "text-blue-500",
        href: "/dashboard/admin/users",
    },
    {
        title: "Active Studios",
        value: studiosCount || 0,
        icon: Building2,
        color: "text-purple-500",
        href: "/dashboard/admin/studios",
    },
    {
        title: "Total Projects",
        value: dossiersCount || 0,
        icon: FileText,
        color: "text-green-500",
        href: "/dashboard/admin/content",
    },
    {
        title: "Est. Revenue",
        value: totalRevenue,
        icon: TrendingUp,
        color: "text-yellow-500",
        href: "/dashboard/admin/bookings",
    },
];
---

<DashboardLayout title="Admin Overview">
    <div class="space-y-8">
        <div>
            <h1 class="text-3xl font-bold tracking-tight">Admin Dashboard</h1>
            <p class="text-muted-foreground">
                System overview and management metrics.
            </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {
                statCards.map((stat) => (
                    <a
                        href={stat.href}
                        class="block hover:scale-[1.02] transition-transform"
                    >
                        <div class="bg-card border border-border p-6 rounded-xl flex items-center justify-between shadow-sm hover:shadow-md transition-shadow">
                            <div>
                                <p class="text-sm font-medium text-muted-foreground">
                                    {stat.title}
                                </p>
                                <h3 class="text-2xl font-bold mt-2">
                                    {stat.value}
                                </h3>
                            </div>
                            <div
                                class={`p-3 bg-muted rounded-full ${stat.color}`}
                            >
                                <stat.icon size={24} />
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Recent Users -->
            <div class="bg-card border border-border rounded-xl p-6">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-lg font-bold">Recent Users</h3>
                    <a
                        href="/dashboard/admin/users"
                        class="text-sm text-primary hover:underline">View All</a
                    >
                </div>
                <div class="space-y-4">
                    {
                        (recentUsers as any[])?.map((user) => (
                            <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/50 transition-colors">
                                <div class="flex items-center gap-3">
                                    <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary font-bold overflow-hidden">
                                        {user.avatar_url ? (
                                            <img
                                                src={user.avatar_url}
                                                alt={user.full_name}
                                                class="w-full h-full object-cover"
                                            />
                                        ) : (
                                            (
                                                user.full_name?.charAt(0) ||
                                                user.email?.charAt(0) ||
                                                "?"
                                            ).toUpperCase()
                                        )}
                                    </div>
                                    <div>
                                        <p class="font-medium text-sm">
                                            {user.full_name || "No Name"}
                                        </p>
                                        <p class="text-xs text-muted-foreground">
                                            {user.email}
                                        </p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <span
                                        class={`px-2 py-1 rounded text-xs font-medium ${
                                            user.role === "admin"
                                                ? "bg-red-500/10 text-red-500"
                                                : user.role === "artist"
                                                  ? "bg-purple-500/10 text-purple-500"
                                                  : user.role === "studio_owner"
                                                    ? "bg-blue-500/10 text-blue-500"
                                                    : "bg-muted text-muted-foreground"
                                        }`}
                                    >
                                        {user.role}
                                    </span>
                                </div>
                            </div>
                        )) || (
                            <p class="text-sm text-muted-foreground italic">
                                No users found.
                            </p>
                        )
                    }
                </div>
            </div>

            <!-- Recent Activity (Bookings) -->
            <div class="bg-card border border-border rounded-xl p-6">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-lg font-bold">Recent Bookings</h3>
                    <a
                        href="/dashboard/admin/bookings"
                        class="text-sm text-primary hover:underline">View All</a
                    >
                </div>
                <div class="space-y-4">
                    {
                        (recentBookings as any[])?.map((booking) => (
                            <div class="flex items-center justify-between p-3 rounded-lg hover:bg-muted/50 transition-colors">
                                <div class="flex items-center gap-3">
                                    <div class="p-2 bg-blue-500/10 rounded-lg text-blue-500">
                                        <Calendar size={20} />
                                    </div>
                                    <div>
                                        <p class="font-medium text-sm">
                                            {(booking.dossier as any)?.title ||
                                                "Project Inquiry"}
                                        </p>
                                        <p class="text-xs text-muted-foreground">
                                            by{" "}
                                            {(booking.client as any)
                                                ?.full_name || "Unknown Client"}
                                        </p>
                                    </div>
                                </div>
                                <div class="text-right">
                                    <p class="text-xs font-medium uppercase mb-1">
                                        {booking.status}
                                    </p>
                                    <div class="flex items-center gap-1 text-xs text-muted-foreground">
                                        <Clock size={10} />
                                        {new Date(
                                            booking.created_at,
                                        ).toLocaleDateString()}
                                    </div>
                                </div>
                            </div>
                        )) || (
                            <p class="text-sm text-muted-foreground italic">
                                No recent bookings.
                            </p>
                        )
                    }
                </div>
            </div>
        </div>
    </div>
</DashboardLayout>
