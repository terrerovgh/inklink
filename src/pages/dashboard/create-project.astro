---
import DashboardLayout from "../../layouts/DashboardLayout.astro";
import CreateProjectForm from "../../components/dashboard/CreateProjectForm";
---

<DashboardLayout title="Start a Community Project">
    <div class="max-w-2xl mx-auto">
        <header class="mb-8">
            <h1 class="text-3xl font-bold mb-2">Post a Project</h1>
            <p class="text-muted-foreground">
                Describe your tattoo idea and let artists come to you. Your
                project will be visible in the Market.
            </p>
        </header>
        <CreateProjectForm client:load />
    </div>
</DashboardLayout>
