---
import Layout from "../layouts/Layout.astro";
import { TattooFeed } from "../components/home/TattooFeed";
import { BlogSection } from "../components/home/BlogSection";
import { MarketplaceSection } from "../components/home/MarketplaceSection";
import { ShopRecommendations } from "../components/home/ShopRecommendations";
import { supabase } from "../lib/supabase";
import type { FlashTattoo, BlogPost, Product } from "../types/database";

// Fetch Flash Tattoos (Projects)
const { data: flashData } = await supabase
	.from("flash_tattoos")
	.select("*, profiles!inner(full_name, avatar_url, city, country)")
	.eq("is_available", true)
	.order("created_at", { ascending: false })
	.limit(6);

const projects = (flashData || []).map((flash: any) => ({
	id: flash.id,
	title: flash.title,
	description: flash.description || "",
	artist: {
		name: flash.profiles?.full_name || "Unknown Artist",
		avatar: flash.profiles?.avatar_url || "https://via.placeholder.com/150",
		location:
			[flash.profiles?.city, flash.profiles?.country]
				.filter(Boolean)
				.join(", ") || "Cuba",
	},
	media: [{ type: "image", url: flash.image_url }] as any[],
	tags: ["flash", "tattoo"], // TODO: Add real tags if available
}));

// Fetch Blog Posts
const { data: blogData } = await supabase
	.from("blog_posts")
	.select("*")
	.eq("published", true)
	.order("created_at", { ascending: false })
	.limit(3);

const posts = (blogData as BlogPost[]) || [];

// Fetch Marketplace Items (Simulated with Products or mock fallback if empty)
// Assuming products table has a 'category' or we just fetch generic products for now
const { data: marketData } = await supabase
	.from("products")
	.select("*")
	.eq("category", "gear") // Assuming 'gear' category exists for marketplace
	.limit(4);

// Fallback for Marketplace if DB is empty to keep UI looking good during dev
const marketItems =
	marketData && marketData.length > 0
		? marketData.map((item: any) => ({
				id: item.id,
				title: item.name,
				price: item.price,
				currency: item.currency || "USD",
				image: item.image_url,
				location: "Havana", // Default for now
				seller: "InkLink Market", // Default
			}))
		: [
				// Keep a few mocks if DB is empty so page isn't broken
				{
					id: "mock1",
					title: "Vintage Coil Machine",
					price: 150,
					currency: "USD",
					image: "https://images.unsplash.com/photo-1611501275019-9b5cda994e8d?w=600&q=80",
					location: "Havana",
					seller: "Old School Supplies",
				},
				{
					id: "mock2",
					title: "Unopened Ink Set",
					price: 85,
					currency: "USD",
					image: "https://images.unsplash.com/photo-1598371839696-5c5bbcece707?w=600&q=80",
					location: "Matanzas",
					seller: "Pro Ink",
				},
			];

// Fetch Shop Recommendations
const { data: shopData } = await supabase
	.from("products")
	.select("*")
	.neq("category", "gear") // Everything else is shop
	.limit(3);

const shopProducts =
	shopData && shopData.length > 0
		? shopData.map((item: any) => ({
				id: item.id,
				title: item.name,
				price: item.price,
				rating: 5.0, // Mock
				reviews: 0, // Mock
				image: item.image_url,
				tag: item.is_recommended ? "Recommended" : null,
			}))
		: [
				// Keeps mocks if DB empty
				{
					id: "s1",
					title: "InkLink Aftercare Balm",
					price: 15,
					rating: 4.8,
					reviews: 120,
					image: "https://images.unsplash.com/photo-1611501275019-9b5cda994e8d?w=600&q=80",
					tag: "Best Seller",
				},
				{
					id: "s2",
					title: "Daily Moisturizer SPF 30",
					price: 22,
					rating: 4.9,
					reviews: 85,
					image: "https://images.unsplash.com/photo-1598371839696-5c5bbcece707?w=600&q=80",
					tag: "New",
				},
				{
					id: "s3",
					title: "Vibrant Color Enhancer",
					price: 18,
					rating: 4.7,
					reviews: 210,
					image: "https://images.unsplash.com/photo-1590246130796-54238a2995bd?w=600&q=80",
					tag: null,
				},
			];

import MapWidget from "../components/dashboard/feed/MapWidget";
---

<Layout title="InkLink - The Future of Tattoo Booking">
	<div class="relative bg-zinc-950 font-sans selection:bg-blue-500/30">
		<div
			class="relative min-h-[100dvh] flex items-center justify-center overflow-hidden section-hero"
		>
			{/* Map Background Layer */}
			<div class="absolute inset-0 z-0">
				<MapWidget client:only="react" id="hero-map-background" />
				{/* Gradient Overlays for Readability */}
				<div
					class="absolute inset-0 bg-gradient-to-r from-zinc-950/90 via-zinc-950/50 to-transparent pointer-events-none"
				>
				</div>
				<div
					class="absolute inset-0 bg-gradient-to-t from-zinc-950 via-transparent to-zinc-950/30 pointer-events-none"
				>
				</div>
			</div>

			<div
				id="hero-content"
				class="w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 pt-20 pointer-events-none transition-all duration-700 ease-[cubic-bezier(0.16,1,0.3,1)]"
			>
				<div
					class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center"
				>
					{/* Left Column: Text Content */}
					<div class="text-center lg:text-left pointer-events-auto">
						<div
							class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-white/5 border border-white/10 text-blue-400 text-xs font-bold uppercase tracking-widest mb-8 backdrop-blur-md hover:bg-white/10 transition-colors cursor-default"
						>
							<span
								class="w-2 h-2 rounded-full bg-blue-500 animate-pulse"
							></span>
							The Future of Ink is Here
						</div>

						<h1
							class="text-6xl md:text-8xl lg:text-9xl font-black tracking-tighter text-white mb-8 leading-[0.9] drop-shadow-2xl"
						>
							INK<span
								class="text-transparent bg-clip-text bg-gradient-to-r from-blue-500 to-indigo-500"
								>LINK</span
							>
						</h1>

						<p
							class="max-w-2xl mx-auto lg:mx-0 text-xl md:text-2xl text-zinc-300 mb-12 font-light leading-relaxed drop-shadow-lg"
						>
							The premier platform connecting Cuba's finest
							artists with collectors. Book appointments, explore
							portfolios, and discover the art of the possible.
						</p>

						<div
							class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-6"
						>
							<a
								href="/explore"
								class="w-full sm:w-auto px-10 py-5 bg-white text-black font-bold text-lg rounded-full hover:bg-zinc-200 transition-all transform hover:scale-105 shadow-[0_0_40px_-10px_rgba(255,255,255,0.3)]"
							>
								Explore Collection
							</a>
							<a
								href="/auth/register"
								class="w-full sm:w-auto px-10 py-5 bg-white/5 text-white font-bold text-lg rounded-full border border-white/10 hover:bg-white/10 transition-all backdrop-blur-sm"
							>
								Start Your Journey
							</a>
						</div>

						{/* Stats - moved inside left column */}
						<div
							class="mt-16 pt-10 border-t border-white/5 grid grid-cols-3 gap-8 md:gap-16"
						>
							<div>
								<span
									class="block text-3xl md:text-4xl font-bold text-white mb-1 drop-shadow-md"
									>500+</span
								>
								<span
									class="text-xs md:text-sm text-zinc-400 uppercase tracking-widest"
									>Artists</span
								>
							</div>
							<div>
								<span
									class="block text-3xl md:text-4xl font-bold text-white mb-1 drop-shadow-md"
									>10k+</span
								>
								<span
									class="text-xs md:text-sm text-zinc-400 uppercase tracking-widest"
									>Designs</span
								>
							</div>
							<div>
								<span
									class="block text-3xl md:text-4xl font-bold text-white mb-1 drop-shadow-md"
									>24/7</span
								>
								<span
									class="text-xs md:text-sm text-zinc-400 uppercase tracking-widest"
									>Support</span
								>
							</div>
						</div>
					</div>

					{/* Right Column: Empty spacer */}
					<div class="hidden lg:block"></div>
				</div>

				{/* Mobile Map Hint */}
				<div
					class="absolute bottom-8 right-0 left-0 flex justify-center lg:justify-end lg:right-8 pointer-events-none"
				>
					<div
						class="bg-black/40 backdrop-blur-md rounded-full px-4 py-2 border border-white/10 flex items-center gap-2 text-white/70 text-xs animate-pulse"
					>
						<span class="w-2 h-2 rounded-full bg-blue-500"></span>
						Click map to explore
					</div>
				</div>
			</div>
		</div>

		<style is:global>
			/* When map is active, hide hero content */
			body.hero-map-active #hero-content {
				opacity: 0;
				transform: translateY(20px) scale(0.95);
				pointer-events: none;
			}
		</style>

		<div
			class="relative bg-zinc-50 dark:bg-zinc-950 z-20 shadow-[0_-20px_50px_rgba(0,0,0,0.5)]"
		>
			<TattooFeed client:load initialProjects={projects} />

			<BlogSection posts={posts} />

			<ShopRecommendations products={shopProducts} />

			<MarketplaceSection items={marketItems} />
		</div>
	</div>
</Layout>
