---
import Layout from "../layouts/Layout.astro";
import { Button } from "../components/ui/button";
---

<Layout title="404 - Page Not Found | InkLink">
    <main
        class="min-h-screen flex items-center justify-center bg-zinc-950 text-white relative overflow-hidden"
    >
        {/* Background Effects */}
        <div class="absolute inset-0 z-0">
            <div
                class="absolute inset-0 bg-[url('https://grainy-gradients.vercel.app/noise.svg')] opacity-20 brightness-100 contrast-150"
            >
            </div>
            <div
                class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-blue-600/10 rounded-full blur-[120px]"
            >
            </div>
        </div>

        <div class="relative z-10 text-center px-4">
            <h1
                class="text-9xl font-black text-transparent bg-clip-text bg-gradient-to-b from-zinc-200 to-zinc-800 mb-4"
            >
                404
            </h1>
            <h2 class="text-2xl md:text-4xl font-bold mb-6">
                Lost in the Ink?
            </h2>
            <p class="text-zinc-400 text-lg mb-8 max-w-md mx-auto">
                The page you are looking for seems to have faded away. Let's get
                you back to the studio.
            </p>
            <Button
                size="lg"
                className="rounded-full px-8 py-6 text-base bg-white text-black hover:bg-zinc-200"
                asChild
            >
                <a href="/"> Return Home </a>
            </Button>
        </div>
    </main>
</Layout>
