---
import Layout from "../../layouts/Layout.astro";
import { Button } from "../../components/ui/button";
import { AffiliateCard } from "../../components/shared/AffiliateCard";
import { StickyDiscountBanner } from "../../components/shared/StickyDiscountBanner";
import { supabase } from "../../lib/supabase";
import type { BlogPost } from "../../types/database";

const { slug } = Astro.params;

if (!slug) {
    return Astro.redirect("/404");
}

const { data: postData, error } = await supabase
    .from("blog_posts")
    .select("*")
    .eq("slug", slug)
    .single();

if (error || !postData) {
    return Astro.redirect("/404");
}

const post = postData as BlogPost;
---

<Layout title={`${post.title} - InkLink Blog`}>
    <main class="min-h-screen bg-white dark:bg-black pt-20 pb-20">
        <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="mb-8">
                <Button
                    variant="link"
                    className="pl-0 text-zinc-500 hover:text-zinc-900 dark:hover:text-white"
                    asChild
                >
                    <a href="/blog">‚Üê Back to Blog</a>
                </Button>
            </div>

            <header class="mb-10 text-center">
                <div
                    class="text-sm text-blue-600 dark:text-blue-400 font-bold uppercase tracking-wider mb-3"
                >
                    {new Date(post.created_at).toLocaleDateString()}
                </div>
                <h1
                    class="text-4xl md:text-5xl font-black text-zinc-900 dark:text-white mb-6 leading-tight"
                >
                    {post.title}
                </h1>
            </header>

            <div
                class="aspect-video w-full rounded-2xl overflow-hidden mb-12 bg-zinc-100 dark:bg-zinc-800"
            >
                {
                    post.image_url && (
                        <img
                            src={post.image_url}
                            alt={post.title}
                            class="w-full h-full object-cover"
                        />
                    )
                }
            </div>

            <p class="text-xl leading-relaxed text-zinc-700 dark:text-zinc-300">
                {post.content}
            </p>
            <p class="mt-8 text-zinc-500 italic">
                (This is a placeholder content for the blog post demonstration.)
            </p>
        </article>

        {/* Monetization: Gear Used Section */}
        <div
            class="max-w-4xl mx-auto mt-20 pt-10 border-t border-zinc-200 dark:border-zinc-800"
        >
            <h2 class="text-2xl font-bold text-zinc-900 dark:text-white mb-8">
                Pro Gear Used in This Session
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {
                    /* Mock Data for Demonstration - in real app would verify from DB based on tags */
                }
                <AffiliateCard
                    client:visible
                    product={{
                        name: "Cheyenne Sol Nova Unlimited",
                        price: 1199.0,
                        image_url:
                            "https://m.media-amazon.com/images/I/61kL0y-M+aL._AC_SL1000_.jpg", // Placeholder
                        affiliate_url: "https://amazon.com",
                        is_recommended: true,
                    }}
                />
                <AffiliateCard
                    client:visible
                    product={{
                        name: "Dynamic Black Ink (8oz)",
                        price: 29.99,
                        image_url:
                            "https://m.media-amazon.com/images/I/71r-tW7YxYL._AC_SL1500_.jpg",
                        affiliate_url: "https://amazon.com",
                        is_recommended: true,
                    }}
                />
            </div>
        </div>

        <StickyDiscountBanner client:load />
    </main>
</Layout>
