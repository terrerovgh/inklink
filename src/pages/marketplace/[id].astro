---
import Layout from "../../layouts/Layout.astro";
import { Button } from "../../components/ui/button";

const { id } = Astro.params;
// In a real app, fetch item by ID. For now, valid for any ID.
---

<Layout title={`Item Details - Marketplace | InkLink`}>
    <main
        class="min-h-screen bg-zinc-50 dark:bg-zinc-900 pt-20 flex flex-col items-center justify-center text-center"
    >
        <div class="max-w-2xl px-4 text-center">
            <h1 class="text-3xl font-bold mb-4 text-zinc-900 dark:text-white">
                Item Details: {id}
            </h1>
            <p class="text-zinc-600 dark:text-zinc-400 mb-8">
                This is a placeholder page for marketplace item details.
                Including seller info, detailed specs, and purchase options.
            </p>
            <Button className="rounded-full" asChild>
                <a href="/marketplace">Back to Marketplace</a>
            </Button>
        </div>
    </main>
</Layout>
